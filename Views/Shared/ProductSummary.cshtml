@model Product
<div class="card">
    <div class="card-header">
        <a href="javascript:someFunction(@Model.ProductID)">@Model.Name</a>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <form id="@Model.ProductID" asp-action="AddToCart"
              asp-controller="Cart" method="post">
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" name="returnUrl"
                   value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text">
                @Model.Description

            </span>
            <div class="fa-pull-right">
                <p class="text-right"><span class="badge badge-primary">@Model.Price</span></p>
                <button type="submit"
                        class="btn btn-success btn-sm">
                    Add To Cart
                </button>
            </div>
        </form>
    </div>
</div>
